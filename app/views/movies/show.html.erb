<article>
  <header>
    <h1><%= @movie.title %></h1>
  </header>
  <h2>Description</h2>
  <p>
    <%= @movie.description %>
  </p>
  <h3>Rating</h3>
  <p>
    <%= @movie.rating %>
  </p>
  <h3>Released On</h3>
  <p>
    <%= @movie.released_on %>
  </p>
  <h3>Total Gross</h3>
  <p>
    <%= format_total_gross(@movie) %>
  </p>
</article>

<nav>
  <%= link_to("All Movies", root_path) %> |
  <%= link_to("Edit", edit_movie_path(@movie.id)) %> |
  <%= link_to("Delete", movie_path(@movie.id), method: :delete, data: { confirm: "Are you sure?" }) %>
</nav>

<%= render "footer" %>