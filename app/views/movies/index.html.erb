<h1><%= pluralize(@movies.count, "Movie") %></h1>

<% @movies.each do |movie| %>
  <article>
    <header>
      <h2><%= link_to(movie.title, movie_path(movie.id)) %></h2>
    </header>
    <p>
      <%= truncate(movie.description, length: 40, separator: " ") %>
    </p>
    <table>
      <tr>
        <th>Released:</th>
        <!-- time_ago_in_words(movie.released_on.to_s(:release_date)) -->
        <td><%= movie.released_on.to_s %> </td> 
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= format_total_gross(movie) %></td>
      </tr>
    </table>
  </article>
<% end %>

<%= link_to("Add New Movie", new_movie_path) %>