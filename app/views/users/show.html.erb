<article id="user">
	<header>
		<h1><%= @user.name.capitalize %></h1>
		<h2><%= mail_to(@user.email) %></h2>
		<h3>Member Since</h3>
		<p>
			<%= @user.created_at.strftime("%B %Y") %>
		</p>
	</header>
 
	<% if @reviews.any? %>
		<h3>Reviews</h3>
		<ol id="reviews">
			<% @reviews.each do |review| %>
				<%= link_to(review.movie.title, review.movie) %>
				<span class="review"><%= pluralize(review.stars, "star") %></span>
				<span class="date"><%= time_ago_in_words(review.created_at) %> ago</span>
				<p>
					&quot;<%= review.comment %>&quot;
				</p>
			<% end %>
		</ol>
	<% end %>

	<% if @favorite_movies.any? %>
		<h3>Favorite Movies</h3>
		<ul>
			<% @favorite_movies.each do |movie| %>
				<li>
					<%= link_to(movie.title, movie_path(movie.id)) %>
				</li>
			<% end %>
		</ul>
	<% end %>
	
	<footer>
		<nav>
		<% if current_user?(@user) %>
			<%= link_to("Edit Account", edit_user_path(@user.id), class: "button") %>
		<% end %>
		<% if current_user_admin? %>
			<%= link_to("Delete Account", user_path(@user.id),
									class: "button",
									method: :delete,
									data: { confirm: "Are you sure you want to permanently delete your account?" }) %>
		<% end %>
		</nav>
	</footer>
</article>