<header id="content-header">
	<h1>New Review for <%= link_to(@movie.title, movie_path(@movie.id)) %></h1>
</header>

<!-- Generating a nested resource form needs both the parent(@movie) and child(@review) objects. -->
<%= form_for([@movie, @review]) do |f| %>
	<fieldset>
		<ol>
			<li class="required">
				<%= f.label :name %>
				<%= f.text_field :name, size: 40, autofocus: true %>
			</li>
			<li class="required stars">
				<%= f.label :stars %>
				<%= f.select :stars, Review::STARS, prompt: "Pick one" %>
			</li>
			<li class="required">
				<%= f.label :comment %>
				<%= f.text_area :comment, cols: 80, placeholder: "What did you think?" %>
			</li>
		</ol>
		<p>
			<%= f.submit "Post Review" %>
			<%= link_to("Cancel", movie_path(@movie.id), class: "button") %>
		</p>
	</fieldset>
<% end %>