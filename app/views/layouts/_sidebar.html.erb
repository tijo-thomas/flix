<aside id="sidebar">
	<nav>
		<ul>
			<li class="all-movies">
				<%= link_to("All Movies", movies_path, class: "button") %>
			</li>
			<% if current_user_admin? %>
				<li class="create-movie">
					<%= link_to("Add New Movie", new_movie_path, class: "button") %>
				</li>
			<% end %>
		</ul>
	</nav>
	<!-- 
		This displays the content that was stored using
		the content_for helper method from the movie show
		template.
	 -->
	<%= content_for(:sidebar_extras) %>
</aside>